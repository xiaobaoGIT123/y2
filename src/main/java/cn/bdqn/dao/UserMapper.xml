<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper  namespace="cn.bdqn.dao.UserMapper">

    <select id="getUserByUsrName" resultType="User">
        select * from `user` WHERE userName=#{userName}
    </select>


    <select id="getUserByUid" resultType="User" parameterType="String">
        select  *from  user where uid =#{id}
    </select>
    <!--根据角色和用户名查找用户(登录)-->
    <select id="getUserByNameAndRole" resultType="User" >
        SELECT * FROM `user` WHERE role=#{role} AND userName=#{userName}
    </select>
    <!--根据手机号码修改用户的密码-->
    <update id="udateUserPwdByPhone">
        UPDATE `user` SET  `passWord`=#{passWord} WHERE phone=#{phone}
    </update>

</mapper>